<div class="container">
  <div class="text-center">
    <br />
    <h3>Thanks for Sharing!</h3>
    <br />
    <%= image_tag current_user.avatar.url(:medium) %>
    <br />
    <br />
  </div>
    <div class="well">
      <h3>Social Media Report Card</h3>
      <br />
      <div class=row >
        <div class="col-md-4">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Facebook</h3>
            </div>
