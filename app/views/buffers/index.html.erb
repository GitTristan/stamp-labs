              <ul>
                <li>Likes: 38</li>
                <li>Comments: 2</li>
                <li>Shares: 2</li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Twitter</h3>
            </div>
            <div class="panel-body">
              <ul>
                <li>Favorites: 62</li>
                <li>Re-Tweets: 5</li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Instagram</h3>
            </div>
            <div class="panel-body">
              <ul>
                <li>Likes: 15</li>
                <li>Re-Post: 5</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
  </div>
